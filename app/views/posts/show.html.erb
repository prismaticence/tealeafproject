
<%= render 'shared/content_title', title: 'Showing posts' %>
<h3><%= @post.title %></h3>
<p><%= @post.description %>
<p><%= link_to make_http(@post.url), make_http(@post.url) %></p>
<p>Comments:</p>
<ul>
<% @post.comments.each do |comment| %>
<li><%= comment.body %></li>
<p class="quiet">Posted by <%= comment.user.username %> at <%= betterdatetime(comment.created_at) %></p>
<% end %>
</ul>

<p>[<%= link_to 'Edit this post', edit_post_path(@post) %>]

<%= render 'shared/errors', myclass: @comment %>
<%= form_for [@post, @comment] do |f| %>
<%= f.label "Comments" %>
<%= f.text_area :body %>
<p><%= f.submit "Create comment" %></p>
<% end %>


