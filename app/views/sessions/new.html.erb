<h2>Login in page</h2>

<%= form_tag '/login' do %>
<div class="control-group">
	<%= label_tag(:username, "Username") %>
	<%= text_field_tag(:username) %>
</div>
<div class="control-group">
	<%= label_tag(:password, "Password") %>
	<%= password_field_tag(:password) %>
</div>
	<%= submit_tag("Login") %>
<% end %>
